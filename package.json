{
  "name": "@henkisdabro/mcp-selector",
  "version": "2.0.2",
  "description": "MCP Server Selector TUI for Claude Code",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "mcp": "./dist/cli.js",
    "claudemcp": "./dist/cli.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "esbuild src/cli/index.ts --bundle --platform=node --target=node20 --outfile=dist/cli.js --format=esm --external:ink --external:react --external:react-devtools-core --external:yoga-wasm-web --external:yoga-layout-prebuilt --external:@inkjs/ui --external:ink-spinner --external:zustand --external:chalk --external:supports-color --external:commander --external:fuse.js",
    "build:prod": "npm run build -- --minify",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fuse.js": "^7.0.0",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "react": "^18.3.1",
    "supports-color": "^9.4.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "ink-testing-library": "^4.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^2.1.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "claude",
    "tui",
    "cli",
    "server-selector",
    "anthropic"
  ],
  "author": "Henrik Soederlund",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/henkisdabro/Claude-Code-MCP-Server-Selector.git"
  },
  "bugs": {
    "url": "https://github.com/henkisdabro/Claude-Code-MCP-Server-Selector/issues"
  },
  "homepage": "https://github.com/henkisdabro/Claude-Code-MCP-Server-Selector#readme"
}
